<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/meal_of_the_day_small_margin"
    android:layout_marginTop="@dimen/meal_of_the_day_small_margin"
    android:layout_marginRight="@dimen/meal_of_the_day_small_margin"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/meal_of_the_day_small_margin"
    card_view:cardCornerRadius="@dimen/meal_of_the_day_small_margin">

    <ImageView
        android:id="@+id/meal_of_the_day_main_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/meal_of_the_day_image_height"
        android:scaleType="centerCrop" />

</android.support.v7.widget.CardView>