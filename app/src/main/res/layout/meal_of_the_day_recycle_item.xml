<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/meal_of_the_day_medium_margin"
    android:layout_marginTop="@dimen/meal_of_the_day_medium_margin"
    android:layout_marginRight="@dimen/meal_of_the_day_medium_margin"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/meal_of_the_day_medium_margin"
    card_view:cardCornerRadius="@dimen/meal_of_the_day_small_margin">

    <ImageView
        android:id="@+id/meal_of_the_day_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/meal_of_the_day_image_height"
        android:scaleType="centerCrop" />
    
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/delete_meal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:fabSize="mini"
        android:layout_margin="@dimen/general_small_padding"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="top|end"
        android:src="@drawable/baseline_delete_black_48"/>

    <TextView
        android:id="@+id/meal_label_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/meal_of_the_day_text_height"
        android:background="@color/colorAlphaBlack"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="@android:color/white" />

</android.support.v7.widget.CardView>