<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Toolbar theme. -->
    <style name="AppTheme.ToolbarTheme">
        <!-- Color of the background -->
        <item name="android:background">@color/primaryColor</item>
        <!-- Color of the title text  -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Color of the text of action (foodMenu) items  -->
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/secondaryColor</item>
        <!-- Applies to views in their normal state -->
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <!-- <item name="colorControlActivated"></item> -->
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <!-- <item name="colorControlHighlight"></item> -->
    </style>

    <!-- Date picker theme. -->
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryDarkColor</item>
    </style>

</resources>
